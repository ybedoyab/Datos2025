{
  "version": "1.0.0",
  "sources": [
    {
      "id": "api_gas",
      "name": "API Gas Co",
      "active": true,
      "type": "api",
      "schedule": { "cron": "* * * * *", "note": "Dev: check each minute" },
      "config": {
        "base_url": "https://httpbin.org/json",
        "params": {},
        "headers": { "Accept": "application/json" }
      },
      "check": { "method": "api_field", "url": "https://httpbin.org/json", "field": "slideshow" },
      "storage": { "local_raw_path": "/app/data/raw/api_gas", "file_format": "json" },
      "force_change": true
    },
    {
      "id": "scrape_example",
      "name": "Scrape Example",
      "active": true,
      "type": "scrape",
      "schedule": { "cron": "0 0 * * 0", "note": "Weekly on Sunday" },
      "config": { "url": "https://example.com" },
      "check": { "method": "scrape_text", "selector": "h1" },
      "storage": { "local_raw_path": "/app/data/raw/scrape_example", "file_format": "html" }
    }
  ]
}
